<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--banner-->
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="alpha">
    </cn.bingoogolapple.bgabanner.BGABanner>
    <!--top1-->
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/dp_24"/>
        <!--title-->
        <TextView
            android:text="测试title 加长 黑色 100000Ml 测试测试测试测试测试测试测试测试测试"
            android:textSize="@dimen/sp_18"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--top2-->
    <LinearLayout
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_13"
            android:text="淘宝价: ¥"
            android:textColor="#888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#888"
            android:id="@+id/tv_mid_strike"
            android:text="199.00"
            android:textSize="@dimen/sp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/transparent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_1"/>
        <TextView
            android:textSize="@dimen/sp_13"
            android:text="月销量: 10000"
            android:textColor="#888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--top3-->
    <LinearLayout
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="券后价: "
            android:textColor="#ffcd2b"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="¥199.00"
            android:textColor="#ffcd2b"
            android:textSize="@dimen/sp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/px_1"/>
        <LinearLayout
            android:paddingRight="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center_vertical"
            style="@style/Widget.AppCompat.Button"
            android:background="@drawable/shape_rounder1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="#fff"
                android:text="100.00优惠券"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="@dimen/dp_8"
                android:background="#fff"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:text="领"
                android:gravity="center"
                android:background="@drawable/shape_rounder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <!--精品推荐-->
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="#808080"
        android:text="精品推荐"
        android:background="#fafafa"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"/>
</LinearLayout>