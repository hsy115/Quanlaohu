<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tl="http://schemas.android.com/tools"
              android:orientation="vertical">
    <!--banner-->
    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:banner_pageChangeDuration="1000"
        app:banner_pointAutoPlayAble="false"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
        app:banner_pointTopBottomMargin="5dp"
        app:banner_transitionEffect="alpha">
    </cn.bingoogolapple.bgabanner.BGABanner>
    <!--recycler1-->
    <android.support.v7.widget.RecyclerView
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_gravity="center"
        android:id="@+id/recycler_home_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">
    </android.support.v7.widget.RecyclerView>
    <!--recycler2-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_home_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:overScrollMode="never">
    </android.support.v7.widget.RecyclerView>
    <!--填充f7-->
    <View
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
    <!--tab-->
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        tl:tl_indicator_gravity="TOP"
        tl:tl_textBold="SELECT"
        app:tl_indicator_color="#fbb847"
        app:tl_indicator_height="@dimen/dp_2"
        app:tl_indicator_width="@dimen/dp_28"
        app:tl_textSelectColor="#fbb847"
        app:tl_textUnselectColor="#000"/>
    <com.feimeng.quanlaohu.ui.test.Custom2ViewPager
        android:id="@+id/vp_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>