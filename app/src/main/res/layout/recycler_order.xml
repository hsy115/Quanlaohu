<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/main_touchedbackground"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:background="#999"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--top1-->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="测试标题,超超超长超超超长超超超长超超超长超超超长"
                android:textColor="#000"
                android:textSize="@dimen/sp_16"/>
            <!--top2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建日 03-28 19:47"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="结算日 03-28 19:47"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
            <!--top3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号 1581254125851254"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/shape_rounder4_gray"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_2"
                    android:text="复制"
                    android:textColor="#b5b5b5"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>
            <!--top4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_use_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费金额: ¥7.9"
                    android:textSize="@dimen/sp_13"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/px_1"
                    android:layout_weight="1"
                    android:background="@color/transparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖励预估: ¥0.14"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/sp_13"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#f0f0f0"/>
</LinearLayout>